generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int          @id @default(autoincrement()) @map("id")
  name        String       @map("name")
  chatId      String       @unique @map("chat_id")
  coordinates Coordinate[] @relation("group_coordinates")

  @@map("group")
}

model Coordinate {
  id        Int     @id @default(autoincrement()) @map("id")
  imagePath String? @map("image_path")
  long      String  @map("long")
  lat       String  @map("lat")
  address   String  @map("address")
  urlId     String? @map("url_id")
  groupId   Int?    @map("group_id")
  Group     Group?  @relation(fields: [groupId], references: [id], name: "group_coordinates")

  @@map("coordinate")
}

model Error {
  id   Int     @id @default(autoincrement()) @map("id")
  url  String  @map("url")
  done Boolean @default(false) @map("done")

  @@map("error")
}
